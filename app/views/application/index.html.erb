<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
		<meta name="viewport" content="width=device-width, initial-scale=1.0"> 
		<title>RPG</title>
		
		<style>
		    section {
	            margin-left: auto;
                margin-right: auto;
                width: 60%;
		    }
		    
		    form {
		        padding: 0;
		        background-color: transparent;
		    }
		    
		    p {
		        text-align: center;
		        font-size: 2em;
		        font-weight: bold;
		        text-shadow: 1px 2px #c3090f;
		    }
		    
		    @media screen and (max-width: 520px) {
                section {
                    width: 98%;
                }
                p {
                    font-size: 1.2em;
                }            
            }
		</style>
	</head>
	<body>
        <%= render 'layouts/header' %>
        <div id="tabs" class="tabs">
	<nav>
		<ul>
			<li><a href="#section-1"><span>Register</span></a></li>
			<li><a href="#section-2"><span>Login</span></a></li>
		</ul>
	</nav>
	<div class="content">
		<section id="section-1">
			 <%= form_for(@user, url: usuario_create_path) do |f| %>
		        <div class="input txt">
		          <%= f.label :name %>
		          <%= f.text_field :name %>
		        </div>
		        <div class="input txt">
		          <%= f.label :email %>
		          <%= f.email_field :email %>
		        </div>
		        <div class="input">
		          <%= f.label :password %>
		          <%= f.password_field :password %>
		        </div>
		        <div class="input">
		          <%= f.label :password_confirmation, "Confirmation" %>
		          <%= f.password_field :password_confirmation %>
		        </div>
		        <div class="button">
		          <%= f.submit "Create my account", class: "btnduo" %>
		        </div>
		     <% end %>
		</section>
		<section id="section-2">
			      <%= form_for(:login, url: login_auth_path) do |f| %>
				      <div class="input">
				        <%= f.label :email %>
				        <%= f.email_field :email %>
				      </div>
				      <div class="input">
				        <%= f.label :password %>
				        <%= f.password_field :password %>
				      </div>
				      <div class="button">
				        <%= f.submit "Login", class: "btnduo" %>
				      </div>
				  <% end %>
		</section>
	</div><!-- /content -->
</div><!-- /tabs -->
<script src="js/cbpFWTabs.js"></script>
<script>
	new CBPFWTabs( document.getElementById( 'tabs' ) );
</script>
	</body>
</html>